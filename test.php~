<?php
// enable error reports on screen
ini_set('error_reporting', E_ALL);
ini_set('display_errors', 'On');  //On or Off


echo PHP_VERSION . "<br>";
// connect to database
include "config.php";

// get data from POST
$created_at = date("Y-m-d H:i");
$name = $_POST["name"];
$email = $_POST["email"];
$email = str_replace("@", "%40", $email);
$languages = $_POST["languages"];
$landingpage_version = $_POST["landingpage_version"];

// echo captured data
echo $created_at . "<br/>";
echo $name . "<br/>";
echo $email . "<br/>";
echo $languages . "<br/>";
echo $landingpage_version . "<br/>";

// send data to database
$sql = "INSERT INTO leads (created_at, name, email, languages, landingpage_version)
VALUES ('".$created_at."', '".$name."', '".$email."', '".$languages."', '".$landingpage_version."')";

if ($conn->query($sql) === TRUE) {
    echo "New record created successfully";
} else {
    echo "Error: " . $sql . "<br>" . $conn->error;
}

$conn->close();
?>
